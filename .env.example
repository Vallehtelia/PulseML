# Copy this file to .env and adjust values as needed.

# Networking ----------------------------------------------------------------
POSTGRES_PORT=5433
REDIS_PORT=6380
BACKEND_PORT=8100
FRONTEND_PORT=3100
FRONTEND_HOST=localhost
# Example public origin using an unused localhost port
FRONTEND_PUBLIC_URL=http://localhost:3100

# Database ------------------------------------------------------------------
POSTGRES_DB=pulseml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/pulseml

# Redis ---------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# Backend -------------------------------------------------------------------
DATA_DIR=/app/data
BACKEND_CORS_ORIGINS=["http://localhost:3100"]
# Generate a strong secret key with the following command:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=replace-with-generated-secret

# Frontend ------------------------------------------------------------------
VITE_API_BASE_URL=http://backend:8000/api
